{
    "compilerOptions": {
      "allowSyntheticDefaultImports": true,
      "esModuleInterop": true,
      "lib": ["esnext"],
      "module": "commonjs",
      "moduleResolution": "node",
      "noUnusedLocals": true,
      "noUnusedParameters": true,
      "outDir": "lib",
      "sourceMap": true,
      "target": "esnext"
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules"]
  }